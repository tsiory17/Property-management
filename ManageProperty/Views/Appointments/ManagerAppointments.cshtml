@model IEnumerable<ManageProperty.Models.AppointmentDetailsModel>

@{
    Layout = "~/Views/Shared/_LayoutManager.cshtml";
    ViewData["Title"] = "Manager's Appointments";
}

<h2>Manager's Appointments (For Managers)</h2>

<h2>Search Appointment</h2>

<form asp-action="SearchAppointmentById" method="get">
    <div class="form-group">
        <label for="appointmentId">Appointment ID</label>
        <input type="number" id="appointmentId" name="appointmentId" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">Search</button>
</form>


<table class="table">
    <thead>
        <tr>
            <th>Appointment ID</th>
            <th>Schedule ID</th>
            <th>Tenant Name</th>
            <th>Date</th>
            <th>Start Time</th>
            <th>End Time</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.AppointmentId</td>
                <td>@item.ScheduleId</td>
                <td>@item.TenantName</td>
                <td>@item.Date</td>
                <td>@item.StartTime</td>
                <td>@item.EndTime</td>
                <td>@item.Status</td>
                <td>
                    <form asp-action="UpdateStatus" method="post" class="form-inline">
                        <input type="hidden" name="appointmentId" value="@item.AppointmentId" />
                        <select name="status" class="form-control">
                            <option value="accepted">Accept</option>
                            <option value="rejected">Reject</option>
                        </select>
                        <button type="submit" class="btn btn-primary">Update</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
