@model IEnumerable<ManageProperty.Models.MessageDetailsModel>

@{
    Layout = "~/Views/Shared/_LayoutManager.cshtml";
    ViewData["Title"] = "Received Messages";
}

<h2>Received Messages</h2>
<a asp-action="MainPage" asp-controller="Managers" class="btn btn-primary">Back to Main Menu</a>

<table class="table">
    <thead>
        <tr>
            <th>Message ID</th>
            <th>Sender</th>
            <th>Content</th>
            <th>Sent At</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MessageId</td>
                <td>@item.SenderName</td>
                <td>@item.Content</td>
                <td>@item.SentAt</td>
                <td>
                    <a asp-action="Reply" asp-route-originalMessageId="@item.MessageId" class="btn btn-secondary">Reply</a>
                    <a asp-action="Delete" asp-route-id="@item.MessageId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
